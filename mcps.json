{
  "$schema": "https://raw.githubusercontent.com/modelcontextprotocol/specification/main/schema/mcps.json",
  "description": "MCP server configurations for GitHub Agentic Workflows CLI",
  "mcpServers": {
    "gh-aw": {
      "command": "./gh-aw",
      "args": ["mcp", "serve"],
      "cwd": ".",
      "env": {
        "PATH": "${PATH}"
      }
    },
    "gh-aw-compile-only": {
      "command": "./gh-aw",
      "args": ["mcp", "serve", "--allowed-tools", "compile,logs"],
      "cwd": ".",
      "env": {
        "PATH": "${PATH}"
      }
    },
    "gh-aw-workflow-mgmt": {
      "command": "./gh-aw",
      "args": ["mcp", "serve", "--allowed-tools", "run,enable,disable,status"],
      "cwd": ".",
      "env": {
        "PATH": "${PATH}"
      }
    },
    "gh-aw-mcp-tools": {
      "command": "./gh-aw",
      "args": ["mcp", "serve", "--allowed-tools", "mcp_inspect,mcp_list,mcp_add"],
      "cwd": ".",
      "env": {
        "PATH": "${PATH}"
      }
    }
  }
}