{
  "serverName": "example-safeinputs",
  "version": "1.0.0",
  "tools": [
    {
      "name": "greet",
      "description": "Greet a person by name using JavaScript",
      "inputSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the person to greet"
          }
        },
        "required": ["name"]
      },
      "handler": "greet.cjs"
    },
    {
      "name": "calculate",
      "description": "Calculate the sum of two numbers using Python",
      "inputSchema": {
        "type": "object",
        "properties": {
          "a": {
            "type": "number",
            "description": "First number"
          },
          "b": {
            "type": "number",
            "description": "Second number"
          }
        },
        "required": ["a", "b"]
      },
      "handler": "calculate.py"
    },
    {
      "name": "system_info",
      "description": "Get system information using shell script",
      "inputSchema": {
        "type": "object",
        "properties": {}
      },
      "handler": "system_info.sh"
    }
  ]
}
