{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["stdio", "http"],
      "description": "MCP connection type"
    },
    "url": {
      "type": "string",
      "description": "URL for HTTP MCP connections"
    },
    "command": {
      "type": "string", 
      "description": "Command for stdio MCP connections"
    }
  },
  "required": ["type"],
  "additionalProperties": true,
  "if": {
    "properties": {
      "type": {
        "const": "http"
      }
    }
  },
  "then": {
    "required": ["url"]
  },
  "else": {
    "if": {
      "properties": {
        "type": {
          "const": "stdio"
        }
      }
    },
    "then": {
      "required": ["command"]
    }
  }
}