{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "agentic-workflow",
  "scopeName": "source.agentic-workflow",
  "fileTypes": ["md"],
  "foldingStartMarker": "^(---|```)",
  "foldingStopMarker": "^(---|```)",
  "patterns": [
    {
      "include": "#frontmatter"
    },
    {
      "include": "#markdown-content"
    }
  ],
  "repository": {
    "frontmatter": {
      "begin": "\\A(---)",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.yaml"
        }
      },
      "end": "^(---)\\s*$",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.end.yaml"
        }
      },
      "name": "meta.frontmatter.yaml",
      "contentName": "source.yaml",
      "patterns": [
        {
          "include": "source.yaml"
        }
      ]
    },
    "markdown-content": {
      "begin": "(?<=^---\\s*$)",
      "end": "\\Z",
      "name": "text.html.markdown.embedded.agentic-workflow",
      "patterns": [
        {
          "include": "#include-directive"
        },
        {
          "include": "#github-context-expression"
        },
        {
          "include": "text.html.markdown"
        }
      ]
    },
    "include-directive": {
      "patterns": [
        {
          "match": "^\\s*(@include(\\?)?\\s+)([^\\s#]+)(#[^\\s]+)?\\s*$",
          "captures": {
            "1": {
              "name": "keyword.control.include.agentic-workflow"
            },
            "2": {
              "name": "keyword.operator.optional.agentic-workflow"
            },
            "3": {
              "name": "string.unquoted.path.agentic-workflow"
            },
            "4": {
              "name": "entity.name.section.agentic-workflow"
            }
          },
          "name": "meta.include.agentic-workflow"
        }
      ]
    },
    "github-context-expression": {
      "patterns": [
        {
          "match": "(\\$\\{\\{)\\s*([^}]+)\\s*(\\}\\})",
          "captures": {
            "1": {
              "name": "punctuation.definition.template-expression.begin.agentic-workflow"
            },
            "2": {
              "name": "variable.other.github-context.agentic-workflow"
            },
            "3": {
              "name": "punctuation.definition.template-expression.end.agentic-workflow"
            }
          },
          "name": "meta.template-expression.github-context.agentic-workflow"
        }
      ]
    }
  }
}