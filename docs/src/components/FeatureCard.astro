---
import octicons, { type IconName } from '@primer/octicons';

interface Props {
  icon: IconName;
  title: string;
  href?: string;
}

const { icon, title, href } = Astro.props;
const iconData = octicons[icon];

if (!iconData) {
  throw new Error(`Octicon "${icon}" not found. Check https://primer.style/octicons/`);
}

const svg = iconData.toSVG({ width: 28, height: 28 });
const Tag = href ? 'a' : 'div';
---

<Tag class="feature-card" href={href}>
  <div class="feature-header">
    <div class="feature-icon" set:html={svg} />
    <h3 class="feature-title">{title}</h3>
  </div>
  <div class="feature-description">
    <slot />
  </div>
</Tag>

<style>
  .feature-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1.25rem;
    border: 1px solid #30363d;
    border-radius: 6px;
    background: rgba(13, 17, 23, 0.6);
    backdrop-filter: blur(8px);
    transition: all 0.2s ease;
    text-decoration: none;
    color: inherit;
    position: relative;
    overflow: hidden;
  }

  .feature-card:hover {
    text-decoration: none;
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.03) 0%, transparent 100%);
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .feature-card:hover::before {
    opacity: 1;
  }

  .feature-card:hover {
    border-color: #8b5cf6;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.08);
  }

  .feature-header {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    margin-bottom: 0.5rem;
  }

  .feature-icon {
    flex-shrink: 0;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.15), rgba(139, 92, 246, 0.08));
    border: 1px solid rgba(139, 92, 246, 0.2);
    border-radius: 8px;
    color: #c4b5fd;
    position: relative;
    z-index: 1;
    transition: all 0.2s ease;
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.15);
  }

  .feature-card:hover .feature-icon {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.25), rgba(139, 92, 246, 0.15));
    border-color: rgba(139, 92, 246, 0.35);
    color: #ddd6fe;
    box-shadow: 0 6px 16px rgba(139, 92, 246, 0.25);
    transform: translateY(-2px);
  }

  .feature-icon :global(svg) {
    display: block;
    fill: currentColor;
    width: 28px;
    height: 28px;
    filter: drop-shadow(0 2px 4px rgba(139, 92, 246, 0.3));
  }

  .feature-content {
    flex: 1;
    min-width: 0;
    position: relative;
    z-index: 1;
  }

  .feature-title {
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.4;
    color: #f0f6fc;
    transition: all 0.2s ease;
  }

  .feature-card:hover .feature-title {
    color: #8b5cf6;
    transform: translateX(2px);
  }

  .feature-description {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #8d96a0;
    transition: color 0.2s ease;
  }

  .feature-card:hover .feature-description {
    color: #a9b3be;
  }

  .feature-description :global(p) {
    margin: 0 0 0.75rem 0;
  }

  .feature-description :global(p:last-child) {
    margin-bottom: 0;
  }

  .feature-description :global(a) {
    color: #58a6ff;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .feature-description :global(a:hover) {
    color: #79c0ff;
    text-decoration: underline;
  }

  @media (prefers-reduced-motion: reduce) {
    .feature-card,
    .feature-card::before,
    .feature-icon,
    .feature-title,
    .feature-description {
      transition: none;
    }
  }
</style>
