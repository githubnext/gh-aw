---
import Default from '@astrojs/starlight/components/SocialIcons.astro';
---

<div class="custom-header-wrapper">
  <div class="custom-header-items">
    <a href="https://githubnext.com/" class="github-next-link" target="_blank" rel="noopener noreferrer">
      <span class="badge">GitHub Next</span>
    </a>
  </div>
  <Default {...Astro.props} />
</div>

<style>
  .custom-header-wrapper {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .custom-header-items {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    line-height: 1;
    white-space: nowrap;
  }

  .github-next-link {
    text-decoration: none;
    transition: transform 0.2s ease;
  }

  .github-next-link:hover {
    transform: translateY(-1px);
  }

  .github-next-link .badge {
    background: linear-gradient(135deg, #c06eff 0%, #8250df 100%);
    color: #ffffff;
    box-shadow: 0 2px 8px rgba(192, 110, 255, 0.3);
    transition: all 0.2s ease;
  }

  .github-next-link:hover .badge {
    background: linear-gradient(135deg, #d0b0ff 0%, #c06eff 100%);
    box-shadow: 0 4px 12px rgba(192, 110, 255, 0.4);
  }

  @media (max-width: 768px) {
    .custom-header-items {
      display: none;
    }
  }
</style>
